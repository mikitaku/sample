<h1>People#index</h1>
<p><%= @msg %></p>




<table>
<tr>
  <th>id</th><th>name</th><th>Age</th><th>Mail</th><th colspan = 2></th>
</tr>

<% @data.each do |obj| %>
  <tr>
    <td><%= obj.id %></td>
    <td><a href="/people/<%= obj.id %>"><%= obj.name %></a></td>
    <td><%= obj.age %></td>
    <td><%= obj.mail %></td>
    <td><a href="/people/edit/<%= obj.id %>">edit</a></td>
    <td><a href="javascript:delData(<%= obj.id %>);">delete</a></td>
  </tr>
<% end %>
</table>

<a href="/people/add/">データを追加</a>



<script>
function delData(num){
  if(confirm("このデータを削除しますか？")){
    document.location = "/cards/delete/" + num;
  }
  return false;
}
</script>
